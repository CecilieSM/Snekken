<UserControl x:Class="RentalKiosk.View.DayScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!-- Ydre grid: titel + tabel -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row 0: Overskrift -->
                <RowDefinition Height="*"/>
                <!-- Row 1: Selve dags-tabel -->
            </Grid.RowDefinitions>

            <!-- Overskrift -->
            <TextBlock Grid.Row="0"
                       Text="Dagsoversigt for valgt ressource"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <!-- Tabel -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <!-- fixed time column -->
                    <ColumnDefinition Width="*"/>
                    <!-- container for dynamic resource columns -->
                </Grid.ColumnDefinitions>

                <!-- LEFT: FIXED TIME COLUMN -->
                <ItemsControl Grid.Column="0"
                  ItemsSource="{Binding TimeSlots}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="4,2">
                                <TextBlock Text="{Binding StartTime, StringFormat=HH\\:mm}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!-- RIGHT: RESOURCE COLUMNS (DYNAMIC) -->
                <ItemsControl Grid.Column="1"
              ItemsSource="{Binding TimeSlots}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="4,2"
                    Margin="0"
                    Command="{Binding DataContext.SelectTimeSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- DEFAULT (available) -->
                                        <Setter Property="Content" Value="{Binding StartTime, StringFormat=HH\\:mm}"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="Green"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="IsEnabled" Value="True"/>

                                        <Style.Triggers>
                                            <!-- UNAVAILABLE -->
                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                <Setter Property="Background" Value="#FFEFEFEF"/>
                                                <Setter Property="BorderBrush" Value="Red"/>
                                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Content" Value="X"/>
                                            </DataTrigger>

                                            <!-- SELECTED SLOT -->
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="#D0F0FF"/>
                                                <Setter Property="BorderBrush" Value="Blue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>



        </Grid>
    </ScrollViewer>
</UserControl>
