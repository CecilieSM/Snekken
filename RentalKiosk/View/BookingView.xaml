<UserControl x:Class="RentalKiosk.View.BookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="20">
        <StackPanel>

            <!-- Overskrift -->
            <TextBlock Text="Booking af Ressource"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Vælg ressourcetype -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Vælg ressource type:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Width="200"
                          Height="30"
                          ItemsSource="{Binding ResourceTypes}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding SelectedResourceType, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Uge-navigation -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="⟨"
                        Width="30"
                        Height="25"
                        Margin="0,0,5,0"
                        Command="{Binding PreviousWeekCommand}"/>

                <TextBlock Text="{Binding CurrentWeekText}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <Button Content="⟩"
                        Width="30"
                        Height="25"
                        Command="{Binding NextWeekCommand}"/>
            </StackPanel>

            <!-- Uge-kalender -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Rækker for ugen -->
                </Grid.RowDefinitions>

                <!-- HEADER-RÆKKE: "Dato" + dynamiske ressource-headere -->
                <DockPanel Grid.Row="0">
                    <!-- Fast "Dato"-kolonne -->
                    <Border Width="120"
                            BorderBrush="Gray" BorderThickness="0,0,1,1"
                            Margin="0,0,0,0">
                        <TextBlock Text="Dato"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Dynamiske kolonner: én header pr. ressource -->
                    <ItemsControl ItemsSource="{Binding ResourcesForSelectedType}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="120"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <TextBlock FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Text="{Binding Title}"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

                <!-- DAG-RÆKKER: én række pr. dag i WeekDays -->
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding WeekDays}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <!-- Dato-kolonne -->
                                <Border Width="120"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <TextBlock Text="{Binding StringFormat=dd-MM-yyyy}"
                                               Margin="4,2"/>
                                </Border>

                                <!-- Dynamiske ressource-celler pr. dag -->
                                <ItemsControl
                                    ItemsSource="{Binding DataContext.ResourcesForSelectedType,
                                                         RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="120"
                                                    BorderBrush="Gray" BorderThickness="0,0,1,1">
                                                <!-- Knap pr. ressource pr. dag -->
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Command="{Binding DataContext.SelectDateAndResourceCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <Button.CommandParameter>
                                                        <Binding Path="DataContext"
                                                         RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                                    </Button.CommandParameter>
                                                </Button>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
