<UserControl x:Class="RentalKiosk.View.BookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Booking af Ressource"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Ressourcetype -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Vælg ressource type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Width="200" Height="30"
                          ItemsSource="{Binding ResourceTypes}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding SelectedResourceType, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Uge-navigation -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="⟨" Width="30" Height="25" Margin="0,0,5,0" Command="{Binding PreviousWeekCommand}"/>
                <TextBlock Text="{Binding CurrentWeekText}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Button Content="⟩" Width="30" Height="25" Command="{Binding NextWeekCommand}"/>
            </StackPanel>

            <!-- Kalender -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0">
                    <Border Width="120" BorderBrush="Gray" BorderThickness="0,0,1,1">
                        <TextBlock Text="Dato" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>

                    <ItemsControl ItemsSource="{Binding ResourcesForSelectedType}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="120" BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <TextBlock FontWeight="Bold" HorizontalAlignment="Center" Text="{Binding Title}"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

                <!-- Rows -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding WeekDays}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Tag="{Binding}">
                                <!-- Date cell -->
                                <Border Width="120" BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <TextBlock Text="{Binding StringFormat=dd-MM-yyyy}" Margin="4,2"/>
                                </Border>

                                <!-- Resource cells -->
                                <ItemsControl ItemsSource="{Binding DataContext.ResourcesForSelectedType,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="120" BorderBrush="Gray" BorderThickness="0,0,1,1">
                                                <!-- Button per resource per day -->
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Command="{Binding DataContext.SelectDateAndResourceCommand,
                                                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Text, ElementName=ParamText}">

                                                    <Grid>
                                                        <!-- DETTE ER DET, BRUGEREN SER I CELLEN -->
                                                        <TextBlock Text=""
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />

                                                        <!-- DETTE ER KUN TIL COMMANDPARAMETER (SKJULT) -->
                                                        <TextBlock x:Name="ParamText" Visibility="Collapsed">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:yyyy-MM-dd}|{1}">
                                                                    <Binding Path="Tag"
                                                                             RelativeSource="{RelativeSource AncestorType=DockPanel}" />
                                                                    <Binding Path="Id" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </Button>

                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
