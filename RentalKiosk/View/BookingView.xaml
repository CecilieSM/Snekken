<UserControl x:Class="RentalKiosk.View.BookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="20">
        <StackPanel>

            <!-- Overskrift -->
            <TextBlock Text="Booking af Ressource"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Vælg ressourcetype -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Vælg ressource type:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Width="200"
                          Height="30"
                          ItemsSource="{Binding ResourceTypes}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding SelectedResourceType, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Uge-navigation -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="⟨"
                        Width="30"
                        Height="25"
                        Margin="0,0,5,0"
                        Command="{Binding PreviousWeekCommand}"/>

                <TextBlock Text="{Binding CurrentWeekText}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <Button Content="⟩"
                        Width="30"
                        Height="25"
                        Command="{Binding NextWeekCommand}"/>
            </StackPanel>

            <!-- Uge-kalender -->
            <Grid>
                <!-- Rækker: 0 = header, 1 = liste med dag-rækker -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Kolonner: dato + 3 ressourcer -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <!-- Header-række -->
                <Border Grid.Row="0" Grid.Column="0"
                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                    <TextBlock Text="Dato"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="1"
                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                    <TextBlock FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Text="{Binding SelectedResourceType.Title,
                                      StringFormat='{}{0} 1'}"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="2"
                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                    <TextBlock FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Text="{Binding SelectedResourceType.Title,
                                      StringFormat='{}{0} 2'}"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="3"
                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                    <TextBlock FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Text="{Binding SelectedResourceType.Title,
                                      StringFormat='{}{0} 3'}"/>
                </Border>

                <!-- Dag-rækker (1 pr. element i WeekDays) -->
                <ItemsControl Grid.Row="1"
                              Grid.ColumnSpan="4"
                              ItemsSource="{Binding WeekDays}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Én dagsrække -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dato -->
                                <Border Grid.Column="0"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <TextBlock Text="{Binding StringFormat=dd-MM-yyyy}"
                                               Margin="4,2"/>
                                </Border>

                                <!-- Ressource 1 -->
                                <Border Grid.Column="1"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="OpenDayView_Click"
                                            Tag="{Binding}">
                                        <TextBlock Text=""/>
                                    </Button>
                                </Border>

                                <!-- Ressource 2 -->
                                <Border Grid.Column="2"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="OpenDayView_Click"
                                            Tag="{Binding}">
                                        <TextBlock Text=""/>
                                    </Button>
                                </Border>

                                <!-- Ressource 3 -->
                                <Border Grid.Column="3"
                                        BorderBrush="Gray" BorderThickness="0,0,1,1">
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="OpenDayView_Click"
                                            Tag="{Binding}">
                                        <TextBlock Text=""/>
                                    </Button>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
