<Window x:Class="RentalKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:RentalKiosk.View"
        mc:Ignorable="d"
        Title="Snekken Booking Kiosk"
        Height="700"
        Width="1400"
        Background="White">

    <!-- Hele kiosken -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Top-bar -->
            <RowDefinition Height="Auto"/>
            <!-- Indhold -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Overskrift -->
            <TextBlock Grid.Column="0"
                       Text="Bookingkiosk – Sejlklubben Snekken"
                       FontSize="26"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,20,10"/>

            <!-- CLEAR ALL -->
            <Button Grid.Column="1"
                    Content="Ryd booking"
                    Height="36"
                    Padding="20,0"
                    Margin="0,0,0,10"
                    Background="LightGray"
                    Command="{Binding ClearAllCommand}"/>
        </Grid>

        <!-- Tre kolonner: uge -> dag -> formular -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Venstre: Uge-kalender -->
                <ColumnDefinition Width="114*"/>
                <ColumnDefinition Width="404*"/>
                <!-- Midten: dagsoversigt -->
                <ColumnDefinition Width="518*"/>
                <!-- Højre: formular -->
                <ColumnDefinition Width="345*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. Uge-oversigt -->
            <Border Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="0,0,10,0"
                    Background="White">
                <view:BookingView />
            </Border>

            <!-- 2. Dagsoversigt -->
            <Border Grid.Column="2"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="0,0,10,0"
                    Background="White">
                <view:DayScheduleView />
            </Border>

            <!-- 3. Bookingformular -->
            <Border Grid.Column="3"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Background="White">
                <view:BookingFormView />
            </Border>
        </Grid>
    </Grid>
</Window>
