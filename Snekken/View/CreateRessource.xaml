<Window x:Class="Snekken.View.CreateRessource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snekken.View"
        mc:Ignorable="d"
        Title="CreateRessource" Height="600" Width="320">
    <Grid>
        <StackPanel>
            <TextBlock Text="Opret Ressource" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="20"/>

            <TextBlock Text="Title" Margin="20,0,20,5"/>
            <TextBox Margin="20,0,10,10" 
                     Width="260" 
                     HorizontalAlignment="Left" 
                     Height="30" 
                     Text="Ressource Name"/>
            
            <TextBlock Text="Type" Margin="20,5"/>
            
            <StackPanel Orientation="Horizontal">
                <ComboBox Margin="20,0,10,0" 
                          HorizontalAlignment="Left" 
                          Width="200" 
                          Height="30">
                    <ComboBoxItem Content="Båd"/>
                    <ComboBoxItem Content="Trailer"/>
                    <ComboBoxItem Content="Mødelokal"/>
                </ComboBox>
                <Button Content="Ny" 
                        Command="{Binding CreateRessourceTypeCommand}" 
                        Width="50" 
                        Height="30" 
                        Margin="0"
                        Background="Salmon"
                        Foreground="White" Click="Button_Click"/>
            </StackPanel>

            <TextBlock Text="Enhedspris" 
                       Margin="20,10,20,5"/>
            <TextBox Margin="20,0,10,10" 
                     Width="260" 
                     HorizontalAlignment="Left" 
                     Height="30" 
                     Text="0.00"/>

            <TextBlock Text="Kapacitet" 
                       Margin="20,5"/>
            <TextBox Margin="20,0,10,10" 
                     Width="260" 
                     HorizontalAlignment="Left" 
                     Height="30" 
                     Text="0"/>

            <TextBlock Text="Beskrivelse" 
                       Margin="20,5"/>
            <TextBox Margin="20,0" 
                     Width="260" 
                     HorizontalAlignment="Left" 
                     Height="100" 
                     Text="Noter" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"/>

            <Button Content="Opret"                    
                    Command="{Binding CreateRessourceCommand}"
                    Height="30"
                    Width="260"
                    HorizontalAlignment="Left" 
                    Margin="20,20,20,20"
                    Background="Salmon"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
